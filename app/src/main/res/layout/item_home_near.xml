<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardNearby"
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1.2"
                app:cardElevation="0dp"
                android:layout_width="0dp"
                android:layout_margin="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_height="@dimen/_90sdp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/cairo_bold"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مطعم KFC للدجاج"
                    app:drawableStartCompat="@drawable/ic_gps" />


                <TextView
                    android:id="@+id/tvAddress"
                    android:fontFamily="@font/cairo_reqular"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/colorGrey2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الشرقية, جدة مكة المكرمة" />


                <TextView
                    android:id="@+id/tvDistance"
                    android:fontFamily="@font/cairo_reqular"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 min ,يبعد عنك مسافة" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>